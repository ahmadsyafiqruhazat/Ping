<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <View
            android:id="@+id/view_vertical_line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_view_host"
            android:layout_alignTop="@+id/text_view_event_label"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@+id/text_view_day"
            android:background="#979797" />

        <TextView
            android:id="@+id/text_view_day"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/view_vertical_line"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="6"
            android:textSize="48sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_view_event_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:fontFamily="sans-serif"
            android:text="Event"
            android:textColor="#7e7b7b"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_view_month"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_view_day"
            android:layout_below="@+id/text_view_day"
            android:text="May"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_view_month"
            android:layout_below="@+id/text_view_month"
            android:text="07:00 AM"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <TextView
            android:id="@+id/text_view_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_event_label"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="Soccer"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <TextView
            android:id="@+id/text_view_location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_event"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="Location" />

        <TextView
            android:id="@+id/text_view_location_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_location_label"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="Soccer Court"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <TextView
            android:id="@+id/text_view_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_location_place"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="Blk 232 Pasir Ris"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/text_view_no_par_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_location"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="No. Of Participants" />

        <TextView
            android:id="@+id/text_view_no_par"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_no_par_label"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="10"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <TextView
            android:id="@+id/text_view_des_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_no_par"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="Details" />

        <TextView
            android:id="@+id/text_view_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_des_label"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="Open jio soccer 5v5"
            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

        <TextView
            android:id="@+id/text_view_host_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_des"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="Host" />

        <TextView
            android:id="@+id/text_view_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_host_label"
            android:layout_toEndOf="@+id/view_vertical_line"
            android:text="Ahmad Syafiq"
            android:textAppearance="@android:style/TextAppearance.Material.Body2" />


    </RelativeLayout>
</android.support.v7.widget.CardView>